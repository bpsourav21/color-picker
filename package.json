{
  "name": "color-picker",
  "description": "A customizable color picker component for React applications, supporting HEX, RGBA, and HSL formats.",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/color-picker.js",
  "repository": "https://github.com/bpsourav21/color-picker.git",
  "scripts": {
    "clean": "rm -rf dist && rm -rf example-dist && rm -rf node_modules/.cache && rm -rf node_modules/.tmp",
    "dev": "vite",
    "build": "npm run clean && tsc -b && vite build",
    "build-example": "npm run clean && BUILD_EXAMPLE=true vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest --no-cache",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "prepublishOnly": "npm run build && npm test"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "react": "^17 || ^18 || ^19",
    "react-dom": "^17 || ^18 || ^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  },
  "keywords": [
    "react",
    "color picker",
    "color picker input",
    "hex",
    "rgba",
    "hsl",
    "customizable",
    "palette"
  ],
  "author": "Mahadi Hasan Sourav",
  "license": "MIT"
}